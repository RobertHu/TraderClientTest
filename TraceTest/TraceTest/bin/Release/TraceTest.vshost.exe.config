<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <system.diagnostics>
    
    <trace autoflush="true" indentsize="4"></trace>
    
    <sources>
      <source name="SourceTest" switchType="System.Diagnostics.SourceSwitch" switchName="mySwitch">
        <listeners>
          <clear/>
          <add name="textWriteListener" type="System.Diagnostics.TextWriterTraceListener" initializeData="log.txt" traceOutputOptions="ThreadId, DateTime"></add>
        </listeners>
      </source>
    </sources>
  </system.diagnostics>
  
</configuration>