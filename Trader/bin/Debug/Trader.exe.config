<?xml version="1.0"?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>


  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceDebug includeExceptionDetailInFaults="false"/>
          <dataContractSerializer maxItemsInObjectGraph="6553600"/>
        </behavior>

        <behavior name="httpBehavior">
          <serviceMetadata httpGetEnabled="true" httpGetUrl="http://ws0210:8090/TransactionServer/Service/meta"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true"/>

    <bindings>
      <basicHttpBinding>
        <binding name="httpBindingNoSecurity" maxReceivedMessageSize="2147483647" openTimeout="00:30:00" sendTimeout="00:30:00" receiveTimeout="00:30:00">
          <security mode="None"></security>
        </binding>
      </basicHttpBinding>

      <netTcpBinding>
        <binding name="tcpBindingNoSecurity" maxReceivedMessageSize="2147483647" maxBufferSize="2147483647" openTimeout="00:05:00" sendTimeout="00:05:00" receiveTimeout="00:30:00" closeTimeout="00:00:30">
          <security mode="None"/>
        </binding>
      </netTcpBinding>

    </bindings>

    <services>

      <service name="Trader.CommandCollectService">
        <endpoint address="net.tcp://localhost:5010/CommandCollectService" binding="netTcpBinding" contract="Protocal.ICommandCollectService" bindingConfiguration="tcpBindingNoSecurity">
        </endpoint>
      </service>
    </services>

  </system.serviceModel>


  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="mylogfile.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="5MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline%exception"/>
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>
  </log4net>


</configuration>
