<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <appSettings>
    <add key="GatewayServiceScopes" value ="net.tcp://GatewayService" />
  </appSettings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>


  <system.serviceModel>

    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceDebug includeExceptionDetailInFaults="true"/>
          <dataContractSerializer maxItemsInObjectGraph="6553600"/>
        </behavior>

        <behavior name="httpBehavior">
          <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:5050/TransactionServerTest/GatewayService/meta"/>
        </behavior>

      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true"/>
    <bindings>

      <basicHttpBinding>
        <binding name="httpBindingNoSecurity" maxReceivedMessageSize="2147483647" openTimeout="00:30:00" sendTimeout="00:30:00" receiveTimeout="00:30:00">
          <security mode="None"></security>
        </binding>
      </basicHttpBinding>

      <netTcpBinding>
        <binding name="tcpBindingNoSecurity" maxReceivedMessageSize="2147483647" maxBufferSize="2147483647" openTimeout="00:30:00" sendTimeout="00:30:00" receiveTimeout="00:30:00">
          <security mode="None"/>
        </binding>
      </netTcpBinding>
      <customBinding>
        <binding name="webservicebinding">
          <textMessageEncoding messageVersion="Soap12" writeEncoding="utf-8"></textMessageEncoding>
          <httpTransport></httpTransport>
        </binding>
      </customBinding>
    </bindings>

    <services>
      <service name ="TransactionServerTest.CommandCollectService">
        <endpoint address="net.tcp://localhost:4001/CommandCollectService"  binding="netTcpBinding" contract="Protocal.ICommandCollectService" bindingConfiguration="tcpBindingNoSecurity" ></endpoint>
      </service>

      <service name="TransactionServerTest.GatewayWebService" behaviorConfiguration="httpBehavior">
        <endpoint address="http://localhost:5000/GatewayWebService" binding="basicHttpBinding" contract="Protocal.IGatewayService"  bindingConfiguration="httpBindingNoSecurity">
        </endpoint>
      </service>

    </services>
  </system.serviceModel>

  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{ABSOLUTE} [%thread] %level %logger - %message%newlineExtra Info: %property{testProperty}%newline%exception"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG"/>
        <levelMax value="DEBUG"/>
      </filter>
    </appender>
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <ApplicationName value="TransactionServerTest">
      </ApplicationName>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="mylogfile.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="5MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline%exception"/>
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="EventLogAppender"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>
  </log4net>

</configuration>